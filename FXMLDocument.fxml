<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="550.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="expensetracker.FXMLDocumentController">
   <top>
      <VBox alignment="CENTER" prefHeight="60.0" style="-fx-background-color: #4682B4;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Personal Expense Tracker" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <TableView fx:id="expenseTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="descriptionColumn" prefWidth="250.0" text="Description" />
          <TableColumn fx:id="amountColumn" prefWidth="120.0" text="Amount ($)" />
            <TableColumn fx:id="categoryColumn" prefWidth="150.0" text="Category" />
        </columns>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </TableView>
   </center>
   <right>
      <VBox alignment="TOP_CENTER" prefWidth="250.0" spacing="15.0" style="-fx-background-color: #F0F8FF;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Manage Expenses">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <GridPane hgap="10.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" prefWidth="80.0" />
                <ColumnConstraints hgrow="SOMETIMES" prefWidth="150.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Description:" />
                  <Label text="Amount:" GridPane.rowIndex="1" />
                  <Label text="Category:" GridPane.rowIndex="2" />
                  <TextField fx:id="descriptionField" GridPane.columnIndex="1" />
                  <TextField fx:id="amountField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <ComboBox fx:id="categoryComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               </children>
               <VBox.margin>
                  <Insets left="5.0" right="5.0" />
               </VBox.margin>
            </GridPane>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddButton" prefWidth="80.0" style="-fx-background-color: #2E8B57; -fx-text-fill: white;" text="Add" />
                  <Button fx:id="updateButton" mnemonicParsing="false" onAction="#handleUpdateButton" prefWidth="80.0" style="-fx-background-color: #FF8C00; -fx-text-fill: white;" text="Update" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteButton" prefWidth="80.0" style="-fx-background-color: #DC143C; -fx-text-fill: white;" text="Delete" />
                  <Button fx:id="clearButton" mnemonicParsing="false" onAction="#handleClearButton" prefWidth="80.0" text="Clear" />
               </children>
            </HBox>
            <Label fx:id="errorLabel" textFill="RED">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
      </VBox>
   </right>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="50.0" style="-fx-background-color: #F5F5F5; -fx-border-color: #D3D3D3; -fx-border-width: 1 0 0 0;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Total Expenses: ">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <Label fx:id="totalExpensesLabel" text="\$0.00">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </bottom>
</BorderPane>
